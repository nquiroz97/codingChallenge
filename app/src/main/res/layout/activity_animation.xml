<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.datechnologies.androidtest.animation.AnimationActivity">

    <ImageView
        android:id="@+id/draggableImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/gpc_logo" />
    <Button
        android:id="@+id/idBtnSound"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:layout_marginStart="@dimen/edit_text_horizontal_margin"
        android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
        android:layout_marginBottom="@dimen/edit_text_horizontal_margin"
        android:background="@color/button_blue"
        android:text="@string/rotate"
        android:layout_above="@id/idBtnAnimation"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        style="@style/buttonTextStyle" />
    <Button
        android:id="@+id/idBtnAnimation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:layout_marginStart="@dimen/edit_text_horizontal_margin"
        android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
        android:layout_marginBottom="@dimen/edit_text_horizontal_margin"
        android:background="@color/button_blue"
        android:text="@string/fade_in"
        android:layout_alignParentBottom="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        style="@style/buttonTextStyle" />

</RelativeLayout>
