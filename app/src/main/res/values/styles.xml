<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Screen theme -->
    <style name="SplashTheme" parent ="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/gpc_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">true</item>
    </style>
    
    <!-- font styles -->
    <style name="headerTextStyle">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="buttonTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/larger_text_size</item>
    </style>
    <style name="entryButtonTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/chat_text_color</item>
        <item name="android:textSize">@dimen/larger_text_size</item>
    </style>
    <style name="chatUsernameTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/chat_text_color</item>
        <item name="android:textSize">@dimen/smaller_text_size</item>
    </style>
    <style name="chatMessageTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/chat_text_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="hintTextFieldStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:textSize">@dimen/larger_text_size</item>
    </style>
    <style name="inputFieldTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/chat_text_color</item>
        <item name="android:textSize">@dimen/larger_text_size</item>
    </style>

</resources>
